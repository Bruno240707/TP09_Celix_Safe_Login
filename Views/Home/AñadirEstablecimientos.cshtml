<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>


<body class="HOME">

<header>
        <div class="navbar">
            <a href='@Url.Action("PostLogin","Home", new { IdUsuario = ViewBag.usuario.idUsuario })' class="logo">Celix-Safe</a>
            <nav>
                <a href="#">Foro</a>
                <a href='@Url.Action("Recetas","Home", new { IdUsuario = ViewBag.usuario.idUsuario })'>Recetas</a>
                <a href='@Url.Action("Productos","Home", new { IdUsuario = ViewBag.usuario.idUsuario })'>Productos</a>
                <a href='@Url.Action("Establecimientos","Home", new { IdUsuario = ViewBag.usuario.idUsuario })'>Establecimientos </a>
               
            </nav>  
            <a href='@Url.Action("Perfil","Home", new { IdUsuario = ViewBag.usuario.idUsuario })' class="username"> @ViewBag.usuario.username <img class="user" src="/Imagen/User.png" alt="User"> </a>
        </div>
</header>

<h1>AÑADIR ESTABLECIMIENTO</h1>

<form action='@Url.Action("agregarEstablecimiento", "Home", new { IdUsuario = ViewBag.usuario.idUsuario })' method="post" onsubmit="return enviar(event)">
    <div class="form-group">
        <label>Nombre del Establecimiento</label>
        <input type="text" class="form-control" id="nombreEstablecimiento" name="nombreEstablecimiento" placeholder="Ej: Panadería El Buen Sabor" onkeyup="validarNombre(event)">
        <p id="mensajeErrorNombre"></p>
    </div>

    <div class="form-group">
        <label>Ubicación</label>
        <select class="form-control" id="idUbicacionEstablecimiento" name="idUbicacionEstablecimiento">
            @foreach (Ubicacion_Establecimiento ubicacion in ViewBag.listaUbicaciones)
            {
                <option value="@ubicacion.idUbicacionRestaurante">@ubicacion.calle</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Calificación</label>
        <select class="form-control" id="calificacionEstablecimiento" name="calificacionEstablecimiento" onkeyup="validarCalificacion(event)">
            <option value="">Selecciona una calificación</option>
            <option value="1">1 ⭐ - Muy Mala</option>
            <option value="2">2 ⭐⭐ - Mala</option>
            <option value="3">3 ⭐⭐⭐ - Regular</option>
            <option value="4">4 ⭐⭐⭐⭐ - Buena</option>
            <option value="5">5 ⭐⭐⭐⭐⭐ - Excelente</option>
        </select>
    </div>

    <div class="form-group">
        <label>Descripción</label>
        <input type="text" class="form-control" id="descripcionEstablecimiento" name="descripcionEstablecimiento" placeholder="Describe brevemente el establecimiento" onkeyup="validarContenido(event)">
        <p id="mensajeErrorContenido"> </p>
    </div>

    <div class="form-group">
        <label>Foto del Establecimiento (URL)</label>
        <input type="text" class="form-control" id="fotoEstablecimiento" name="fotoEstablecimiento" placeholder="URL de la imagen" onkeyup="validarFoto(event)">
        <p id="mensajeErrorFoto"> </p>
    </div>

    <button type="submit">Agregar Establecimiento</button>
</form>

    
</div>

</body>


</html>