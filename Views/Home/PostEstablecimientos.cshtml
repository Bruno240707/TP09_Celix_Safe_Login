<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body class="HOME">

<header>
        <div class="navbar">
            <a href='@Url.Action("PostLogin","Home", new { IdUsuario = ViewBag.usuario.idUsuario })' class="logo">Celix-Safe</a>
            <nav>
                <a href='@Url.Action("Foro","Home", new { IdUsuario = ViewBag.usuario.idUsuario })'>Foro</a>
                <a href='@Url.Action("Recetas","Home", new { IdUsuario = ViewBag.usuario.idUsuario })'>Recetas</a>
                <a href='@Url.Action("Productos","Home", new { IdUsuario = ViewBag.usuario.idUsuario })'>Productos</a>
                <a href='@Url.Action("Establecimientos","Home", new { IdUsuario = ViewBag.usuario.idUsuario })'>Establecimientos </a>
               
            </nav>  
            <a href='@Url.Action("Perfil","Home", new { IdUsuario = ViewBag.usuario.idUsuario })' class="username"> @ViewBag.usuario.username <img class="user" src="/Imagen/User.png" alt="User"> </a>
        </div>
</header>

<div class="contenedor-principal">
    <form action='@Url.Action("busquedaEstablecimientos", "Home", new { IdUsuario = ViewBag.usuario.idUsuario })' method="Post" class="form-busqueda">
        <input type="text" class="form-control" placeholder="Buscar establecimientos" id="busqueda" name="busqueda">
    </form>

    <ul class="lista-productos">
        @if (ViewBag.listaEstablecimientosBuscados != null && ViewBag.listaEstablecimientosBuscados.Count > 0)
        {
            @for (int i = 0; i < ViewBag.listaEstablecimientosBuscados.Count; i++)
            {
                <li class="tarjeta-producto">
                    <img src="@ViewBag.listaEstablecimientosBuscados[i].fotoEstablecimiento" alt="@ViewBag.listaEstablecimientosBuscados[i].nombreEstablecimiento" />
                    <strong>Nombre:</strong> @ViewBag.listaEstablecimientosBuscados[i].nombreEstablecimiento <br />
                    <strong>Calificacion:</strong> @ViewBag.listaEstablecimientosBuscados[i].calificacionEstablecimiento <br />
                    <strong>Descripcion:</strong> @ViewBag.listaEstablecimientosBuscados[i].descripcionEstablecimiento <br />
                    <a href="#" class="boton-ver">Ver</a>
                </li>
            }
        }
        else 
        {
            <p>No se encontraron establecimientos.</p>
        }

    </ul>
</div>

</body>
</html>