@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="site.js"></script>
    <link rel="stylesheet" href="estilo.css">
</head>
<body class="Login">

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="col-md-4">
            <h3 class="text-center">Iniciar Sesión</h3>

            <form action='@Url.Action("LoginValidar", "Home")' method="Post">
                <div class="form-group">
                    <label for="email">Correo Electrónico</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Ingresa tu correo" required>
                </div>
                <div class="form-group">
                    <label for="contraseña">Contraseña</label>
                    <input type="password" class="form-control" id="contraseña" name="contraseña" placeholder="Ingresa tu contraseña" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
            </form>

                <a class="nav-link active" aria-current="page" href='@Url.Action("Registrarse","Home")'> No tienes cuenta? Registrate </a>
                <a class="nav-link active" aria-current="page" href='@Url.Action("Olvide","Home")'> Olvide mi contraseña </a>
        </div>
    </div>



</body>
</html>
